<!-- Example 14-2 An assertion on a simple type -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:simpleType name="SizeType">
    <xs:restriction base="xs:integer">
      <!-- SKIPTEST: XML Schema 1.1 -->
      <xs:assertion test="$value != 0" />
    </xs:restriction>
  </xs:simpleType>
</xs:schema>
