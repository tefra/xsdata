<!-- Example 14-10 An assertion on a list type -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:simpleType name="SizeListType">
    <xs:restriction>
      <xs:simpleType>
        <xs:list itemType="xs:integer" />
      </xs:simpleType>
      <!-- SKIPTEST: XML Schema 1.1 -->
      <xs:assertion test="$value[1] = 0" />
    </xs:restriction>
  </xs:simpleType>
</xs:schema>
