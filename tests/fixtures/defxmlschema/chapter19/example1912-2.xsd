<!-- Example 19-12 Reusing fragments of content models -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:group name="AOrBGroup">
    <xs:choice>
      <xs:element ref="a" />
      <xs:element ref="b" />
    </xs:choice>
  </xs:group>
  <xs:element name="x">
    <xs:complexType>
      <xs:sequence>
        <xs:group ref="AOrBGroup" />
        <xs:element ref="c" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>
