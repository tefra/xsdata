<!-- Example 19-17 Allowing future extensions for choice groups -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="x">
    <xs:complexType>
      <xs:choice maxOccurs="unbounded">
        <xs:element ref="a" />
        <xs:element ref="b" />
        <xs:element ref="ext" />
      </xs:choice>
    </xs:complexType>
  </xs:element>
  <xs:element name="ext" abstract="true" type="xs:string" />
</xs:schema>
